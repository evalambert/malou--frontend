---
//pages/weaving.astro

import fetchApi from "../lib/strapi";
import Layout from "../layouts/Layout.astro";
import WeavingList from "../layouts/Weaving-list.jsx";

const weavings = await fetchApi({
	endpoint: "weavings?populate=*", // the content type to fetch
	wrappedByKey: "data", // the key to unwrap the response
	locale: "fr"
});



export const prerender = true;
---


<Layout title="Weaving" showReturn returnTo="">
	<main>
		<WeavingList dataWeaving={weavings} client:only/>
	</main>
</Layout>
