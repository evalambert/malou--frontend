---
//pages/[lang]/volume.astro

import Layout from '../../layouts/Layout.astro';
import AllProjectsLists from '../../layouts/AllProjectsLists.astro';
import PreviewImg from '../../components/features/preview-image/PreviewImg.jsx';

export async function getStaticPaths() {
    return [{ params: { lang: 'fr' } }, { params: { lang: 'en' } }];
}
const { lang } = Astro.params;

export const prerender = true;
---

<Layout
    title={lang === 'fr' ? 'Accueil' : 'Home'}
    showReturn
    returnTo='/'
    returnClass='md:top-[30vh] md:left-[-15px] md:rotate-[-51.35deg] top-[70px] left-[-15px] rotate-[-62deg]'
    languageSwitchClass='top-[8vh] right-[20px] md:top-[8vh] md:right-[20vw]'
>
    <AllProjectsLists lang={lang} enterIndex={false} />
    <PreviewImg
        transition:name='preview-image'
        transition:persist
        client:only
    />
</Layout>
<script is:inline src='/scripts/preview-slider-transition-anim.js'></script>
