---
//pages/weaving.astro

import fetchApi from "../../lib/strapi";
import Layout from "../../layouts/Layout.astro";
import WeavingList from "../../layouts/projects-lists/Weaving-list.jsx";
import Nav from "../../layouts/Nav.jsx";

export async function getStaticPaths() {
  return [{ params: { lang: "fr" } }, { params: { lang: "en" } }];
}

const { lang } = Astro.params;

const weavings = await fetchApi({
  endpoint: "weavings?populate=*",
  wrappedByKey: "data",
  locale: lang,
});

export const prerender = true;
---

<Layout title="Weaving" showReturn returnTo="">
  <main>
    <Nav
      lang={lang}
      currentPath={Astro.url.pathname}
      transition:name="nav"
      transition:persist
      client:load
    />
    <WeavingList
      targetHref={`/weaving/`}
      lang={lang}
      dataWeaving={weavings}
      isOnWeavingPage={true}
      transition:name="weavinglist"
      transition:persist
      client:load
    />
  </main>
</Layout>
