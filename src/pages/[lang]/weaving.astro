---
//pages/[lang]/weaving.astro

import Layout from '../../layouts/Layout.astro';
import AllProjectsLists from '../../layouts/AllProjectsLists.astro';
import PreviewImg from '../../components/features/preview-image/PreviewImg.jsx';

export async function getStaticPaths() {
    return [{ params: { lang: 'fr' } }, { params: { lang: 'en' } }];
}
const { lang } = Astro.params;

export const prerender = true;
---

<Layout
    title={lang === 'fr' ? 'Accueil' : 'Home'}
    showReturn
    returnTo='/'
    returnClass='top-[30vh] left-[-15px] rotate-[-62deg] md:top-[55vh] md:left-[-15px] md:rotate-[-51.35deg]'
    languageSwitchClass='top-[7vh] right-[20px] md:top-[7vh] md:right-[21vw]'
>
    <AllProjectsLists lang={lang} enterIndex={false} />
    <PreviewImg
        transition:name='preview-image'
        transition:persist
        client:only
    />
</Layout>
<script is:inline src='/scripts/preview-slider-transition-anim.js'></script>
