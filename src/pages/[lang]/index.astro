---
//pages/[lang]/index.astro

import Layout from '../../layouts/Layout.astro';
import AllProjectsLists from '../../layouts/AllProjectsLists.astro';

export async function getStaticPaths() {
    return [{ params: { lang: 'fr' } }, { params: { lang: 'en' } }];
}
const { lang } = Astro.params;

export const prerender = true;

export const enterTarget = true;
---

<!-- // Trouver un moyen de twixer la valeur de enterIndex -->
<Layout
    title={lang === 'fr' ? 'Accueil' : 'Home'}
    languageSwitchClass='top-[8vh] right-[20px] md:top-[8vh] md:right-[20vw]'
>
    <AllProjectsLists lang={lang} enterIndex={enterTarget} />
</Layout>
<script define:vars={{ enterTarget }}>
    document.addEventListener('astro:page-load', () => {
        const enterTarget = false;
        return enterTarget;
    });
</script>
